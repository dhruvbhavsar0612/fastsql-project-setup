name: CI

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

env:
  PYTHON_VERSION: "{{ config.python_version.value }}"

jobs:
  lint:
    name: Lint
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      {% if config.package_manager == config.package_manager.UV %}
      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true

      - name: Set up Python
        run: uv python install ${{ '{{' }} env.PYTHON_VERSION {{ '}}' }}

      - name: Install dependencies
        run: uv sync --dev

      {% if config.linter == config.linter.RUFF %}
      - name: Lint with Ruff
        run: |
          uv run ruff check .
          uv run ruff format --check .
      {% elif config.linter == config.linter.BLACK_ISORT %}
      - name: Check formatting with Black
        run: uv run black --check .
      
      - name: Check imports with isort
        run: uv run isort --check .
      {% endif %}

      {% if config.type_checker == config.type_checker.MYPY_STRICT or config.type_checker == config.type_checker.MYPY_STANDARD %}
      - name: Type check with mypy
        run: uv run mypy app
      {% elif config.type_checker == config.type_checker.PYREFLY %}
      - name: Type check with Pyrefly
        run: uv run pyrefly check app
      {% endif %}

      {% else %}
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ '{{' }} env.PYTHON_VERSION {{ '}}' }}
          cache: "pip"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -e ".[dev]"

      {% if config.linter == config.linter.RUFF %}
      - name: Lint with Ruff
        run: |
          ruff check .
          ruff format --check .
      {% elif config.linter == config.linter.BLACK_ISORT %}
      - name: Check formatting with Black
        run: black --check .
      
      - name: Check imports with isort
        run: isort --check .
      {% endif %}

      {% if config.type_checker == config.type_checker.MYPY_STRICT or config.type_checker == config.type_checker.MYPY_STANDARD %}
      - name: Type check with mypy
        run: mypy app
      {% elif config.type_checker == config.type_checker.PYREFLY %}
      - name: Type check with Pyrefly
        run: pyrefly check app
      {% endif %}
      {% endif %}

  {% if config.testing %}
  test:
    name: Test
    runs-on: ubuntu-latest
    {% if config.database == config.database.POSTGRESQL or config.cache_backend == config.cache_backend.REDIS %}
    services:
      {% if config.database == config.database.POSTGRESQL %}
      postgres:
        image: postgres:16
        env:
          POSTGRES_USER: postgres
          POSTGRES_PASSWORD: postgres
          POSTGRES_DB: test_db
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
      {% endif %}
      {% if config.cache_backend == config.cache_backend.REDIS %}
      redis:
        image: redis:7
        ports:
          - 6379:6379
        options: >-
          --health-cmd "redis-cli ping"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
      {% endif %}
    {% endif %}

    steps:
      - uses: actions/checkout@v4

      {% if config.package_manager == config.package_manager.UV %}
      - name: Install uv
        uses: astral-sh/setup-uv@v4
        with:
          enable-cache: true

      - name: Set up Python
        run: uv python install ${{ '{{' }} env.PYTHON_VERSION {{ '}}' }}

      - name: Install dependencies
        run: uv sync --dev

      - name: Run tests
        run: uv run pytest --cov=app --cov-report=xml
        env:
          {% if config.database == config.database.POSTGRESQL %}
          DATABASE_URL: postgresql+psycopg://postgres:postgres@localhost:5432/test_db
          {% endif %}
          {% if config.cache_backend == config.cache_backend.REDIS %}
          REDIS_URL: redis://localhost:6379/0
          {% endif %}

      {% else %}
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ '{{' }} env.PYTHON_VERSION {{ '}}' }}
          cache: "pip"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -e ".[dev]"

      - name: Run tests
        run: pytest --cov=app --cov-report=xml
        env:
          {% if config.database == config.database.POSTGRESQL %}
          DATABASE_URL: postgresql+psycopg://postgres:postgres@localhost:5432/test_db
          {% endif %}
          {% if config.cache_backend == config.cache_backend.REDIS %}
          REDIS_URL: redis://localhost:6379/0
          {% endif %}
      {% endif %}

      - name: Upload coverage
        uses: codecov/codecov-action@v4
        with:
          file: ./coverage.xml
          fail_ci_if_error: false
  {% endif %}

  {% if config.docker %}
  build:
    name: Build Docker Image
    runs-on: ubuntu-latest
    needs: [lint{% if config.testing %}, test{% endif %}]
    steps:
      - uses: actions/checkout@v4

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Build Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: false
          tags: {{ config.project_name }}:test
          cache-from: type=gha
          cache-to: type=gha,mode=max

  {% if config.docker_compose %}
  docker-compose-test:
    name: Docker Compose Integration Test
    runs-on: ubuntu-latest
    needs: [build]
    steps:
      - uses: actions/checkout@v4

      - name: Create .env file
        run: |
          cp .env.example .env
          echo "DEBUG=true" >> .env
          echo "APP_ENV=testing" >> .env

      - name: Build and start services
        run: |
          docker compose build
          docker compose up -d
          
      - name: Wait for services to be healthy
        run: |
          echo "Waiting for services to start..."
          sleep 10
          
          # Wait for app to be ready (max 60 seconds)
          for i in {1..12}; do
            if curl -s http://localhost:8000/health > /dev/null 2>&1; then
              echo "App is healthy!"
              break
            fi
            echo "Waiting for app... (attempt $i/12)"
            sleep 5
          done

      - name: Test health endpoint
        run: |
          response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:8000/health)
          if [ "$response" != "200" ]; then
            echo "Health check failed with status: $response"
            docker compose logs app
            exit 1
          fi
          echo "Health check passed!"

      - name: Test API root endpoint
        run: |
          response=$(curl -s http://localhost:8000/)
          echo "Root response: $response"
          if ! echo "$response" | grep -q "{{ config.project_name }}"; then
            echo "Root endpoint check failed"
            exit 1
          fi
          echo "Root endpoint check passed!"

      - name: Test API docs availability
        run: |
          response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:8000/docs)
          if [ "$response" != "200" ]; then
            echo "API docs not available (status: $response) - this may be expected in non-debug mode"
          else
            echo "API docs available!"
          fi

      - name: Show container logs on failure
        if: failure()
        run: docker compose logs

      - name: Cleanup
        if: always()
        run: docker compose down -v
  {% endif %}
  {% endif %}
